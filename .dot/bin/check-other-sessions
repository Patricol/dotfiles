#!/usr/bin/env bash

main() {
	other_users() {
		local current_user others
		current_user="$(id -un)"
		others="$(w -hs | grep -vE "^${current_user}" | wc -l)"
		[[ "${others}" -gt 0 ]]
		return "$?"
	}

	other_sessions() {
		local others
		others="$(w -hs | wc -l)"
		[[ "${others}" -gt 1 ]]
		return "$?"
	}

	if other_sessions; then
		# font index for polybar
		local material_icons output
		material_icons=5
		output="%{T${material_icons}}ó°€Ž%{T-}"
	fi
	echo "${output}"
}

main

