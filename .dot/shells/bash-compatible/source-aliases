# vi:syntax=sh

# This exists as a separate script so that I can run noninteractive bash/zsh shells that only source aliases.

# Source aliases

if [[ -d ~/.dot/l/aliases/ ]]; then
	for alias_file in ~/.dot/l/aliases/*; do
		if ! [[ -d "${alias_file}" ]]; then
			source "${alias_file}"
		fi
	done
	unset alias_file
fi

